{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "client",
        "image": "shan1500/complex-client",
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "hostPort": 5000,
            "containerPort": 3000
          }
        ]
      },
      {
        "name": "server",
        "image": "shan1500/complex-server",
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "containerPort": 5000
          }
        ],
        "environment": [
          {
            "name": "REDIS_HOST",
            "value": "redis"
          },
          {
            "name": "PGHOST",
            "value": "your-postgres-endpoint.amazonaws.com"
          },
          {
            "name": "PGUSER",
            "value": "postgres"
          },
          {
            "name": "PGPASSWORD",
            "value": "yourpassword"
          },
          {
            "name": "PGDATABASE",
            "value": "yourdb"
          },
          {
            "name": "PGPORT",
            "value": "5432"
          }
        ]
      },
      {
        "name": "worker",
        "image": "shan1500/complex-worker",
        "essential": true,
        "memory": 128,
        "environment": [
          {
            "name": "REDIS_HOST",
            "value": "redis"
          },
          {
            "name": "PGHOST",
            "value": "your-postgres-endpoint.amazonaws.com"
          },
          {
            "name": "PGUSER",
            "value": "postgres"
          },
          {
            "name": "PGPASSWORD",
            "value": "yourpassword"
          },
          {
            "name": "PGDATABASE",
            "value": "yourdb"
          },
          {
            "name": "PGPORT",
            "value": "5432"
          }
        ]
      }
    ]
  }